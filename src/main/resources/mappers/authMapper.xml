<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ssafy.auth.model.mapper.AuthMapper">

    <resultMap type="userDto" id="user" >
        <result column="user_id" property="userId"/>
        <result column="email" property="email"/>
        <result column="password" property="password"/>
        <result column="name" property="name"/>
        <result column="address" property="address"/>
        <result column="phone_number" property="phoneNumber"/>
        <result column="is_manager" property="isManager"/>
    </resultMap>

    <resultMap type="userDto" id="loginUser">
        <result column="user_id" property="userId"/>
        <result column="email" property="email"/>
        <result column="name" property="name"/>
    </resultMap>

    <select id="login" parameterType="userDto" resultMap="loginUser">
        SELECT user_id, email, name
        FROM users
        WHERE email = #{email} AND password = #{password};
    </select>

    <update id="updateLogin" parameterType="userDto">
        UPDATE users SET last_login = current_timestamp WHERE user_id = #{userId}
    </update>

    <update id="logout" parameterType="int">
        UPDATE tokens
        set refresh_token = NULL
        where user_id = #{userId}
    </update>


    <update id="updateRefreshToken" parameterType="tokenDto">
        UPDATE tokens
        set refresh_token = #{refreshToken}
        where user_id = #{userId}
    </update>


    <select id="findEmail" parameterType="userDto" resultType="string">
        SELECT email
        FROM users
        WHERE name = #{name} AND phone_number = #{phoneNumber}
    </select>

    <select id="findPassword" parameterType="userDto" resultType="string">
        SELECT password
        FROM users
        WHERE name = #{name} AND email = #{email}
    </select>

    <select id="checkEmail" parameterType="String" resultType="int">
        SELECT count(*)
        FROM users
        WHERE email=#{email}
    </select>

    <select id="checkRefreshToken" parameterType="String" resultMap="loginUser">
        SELECT user_id, email, name
        FROM users
        WHERE user_id = (
            SELECT user_id
            FROM tokens
            WHERE refresh_token = #{refresh_token}
        );
    </select>
</mapper>